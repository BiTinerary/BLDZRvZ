default 1
timeout 15
gfxmenu /boot/message
color yellow/black white/black white/black white/black
write (md)0x220+1 !BAT\necho -n -P:0000 $[0107]                                BLDZR v3.1.3 CD                              \0 && initscript (md)0x220+1
splashimage (hd0,0)/boot/syslinux/


